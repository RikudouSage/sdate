{
    "require": {
        "php": "^7.2"
    },
    "autoload": {
        "files": [
            "src/globals.php"
        ],
        "psr-4": {
            "Rikudou\\Sdate\\": "src/"
        }
    },
    "autoload-dev": {
        "Rikudou\\Sdate\\Tests\\": "tests/"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.2",
        "phpstan/phpstan": "^0.12.31",
        "friendsofphp/php-cs-fixer": "^2.16"
    },
    "scripts": {
        "fixer": "php-cs-fixer fix src",
        "phpstan": "phpstan analyse src --level=max",
        "phpunit": "phpunit"
    }
}
